# Usar Debian slim como base
FROM node:20-bookworm-slim AS build

# Establecemos el directorio de trabajo
WORKDIR /usr/src/app

# Instalamos dependencias necesarias
RUN apt-get update && apt-get install -y \
    curl \
    ca-certificates \
    git \
    --no-install-recommends \
    && rm -rf /var/lib/apt/lists/*

# Configuramos permisos
RUN mkdir -p /usr/src/app/.npm && \
    chown -R node:node /usr/src/app

USER node
ENV NPM_CONFIG_PREFIX=/usr/src/app/.npm

# Copiamos los archivos de dependencias
COPY --chown=node:node package*.json ./

# Instalamos dependencias
RUN npm install -g npm@latest && \
    npm install && \
    npm install esbuild@0.20.1 --save-exact

# Copiamos el resto de archivos del proyecto
COPY --chown=node:node . .

# Construimos la aplicaci칩n para producci칩n
RUN npm run build

# No necesitamos exponer puertos ya que solo generaremos archivos est치ticos
# que ser치n servidos por el Nginx del servidor principal

# Mantenemos el contenedor vivo (opcional, si necesitas mantenerlo corriendo)
CMD ["tail", "-f", "/dev/null"] 