                <div class="oh-flex oh-right oh-d-8">
                    <img style="margin-right: 0.5rem;" src="../img/inventario/precio.svg" alt="">
                    <span style="font-weight: bold; color: #5f784b;">{{Presio}}</span>
                </div>
            </div>
            <div class="oh-flex oh-left" style="margin-bottom: 0.5rem;">
                <img style="margin-right: 0.5rem;" src="../img/inventario/ubicacion.svg" alt="">
                <span>{{Direccion}}</span>
            </div>
            <div class="oh-flex oh-left" style="margin-bottom: 0.5rem;">
                <div>
                    <img style="margin-right: 0.5rem;" src="../img/inventario/recamaras.svg" alt="">
                    <span>{{numDeRecamaras}}</span>
                </div>
                <div style="margin-left: 1rem;">
                    <img style="margin-right: 0.5rem;" src="../img/inventario/metrosdeconstruccion.svg" alt="">
                    <span>{{MtsDeCostruccion}}</span>
                </div>
            </div>
        </div>
    </div>
    {{/each}}
{{/if}}
</div>