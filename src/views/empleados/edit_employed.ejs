<div class="contect">
    <h1 style="text-transform: capitalize;">Registrar nuevo empleado</h1>
    <form action="/empleado/edit/{{empleado._id}}?_method=PUT" method="post">
        <div class="section">
            <div class="form">
                <input type="hidden" name="estado" value="Empleado">
                <div class="ctrl">
                    <label for="prim-nom" class="label-ctrl">Nombre</label>
                    <input id="prim-nom" name="prim_nom" type="text" class="campo-obligatorio" campo value="{{empleado.prim_nom}}">
                </div>
                <div class="ctrl">
                    <label for="segun-nom" class="label-ctrl">Segundo nombre</label>
                    <input id="segun-nom" name="segun_nom" type="text" value="{{segun_nom}}">
                </div>
                <div class="ctrl">
                    <label for="apell-pa" class="label-ctrl">Apellido  paterno</label>
                    <input id="apell-pa" name="apell_pa" type="text" class="campo-obligatorio" campo value="{{empleado.apell_pa}}">
                </div>
                <div class="ctrl">
                    <label for="apell-ma" class="label-ctrl">Apellido  materno</label>
                    <input id="apell-ma" name="apell_ma" type="text" class="campo-obligatorio" campo value="{{empleado.apell_ma}}">
                </div>
                <div class="ctrl">
                    <label for="pust" class="label-ctrl">Puesto</label>
                    <select name="pust" class="campo-obligatorio" campo value="{{empleado.pust}}">
                        <option value="{{empleado.pust}}" selected="">{{empleado.pust}}</option>
                        {{#each department}}
                            {{#each departments}}
                                <option value="{{this}}">{{this}}</option>
                            {{/each}}
                        {{/each }}
                    </select>
                </div>
                <div class="ctrl">
                    <label for="calle" class="label-ctrl">Calle</label>
                    <input id="calle" name="calle" type="text" value="{{empleado.calle}}">
                </div>
                <div class="ctrl">
                    <label for="fecha_na" class="label-ctrl">Fecha de nacimiento</label>
                    <input id="fecha_na" name="fecha_na"type="date" value="{{empleado.fecha_na}}">
                </div>
            </div>
            <div class="form">
                <div class="ctrl">
                    <label for="nun-in" class="label-ctrl">Número interior</label>
                    <input id="nun-in" name="nun_in" type="text" value="{{empleado.nun-in}}">
                </div>
                <div class="ctrl">
                    <label for="nun-ex" class="label-ctrl">Número externo</label>
                    <input id="nun-ex" name="nun_ex" type="text" value="{{empleado.nun_ex}}">
                </div>
                <div class="ctrl">
                    <label for="codigo" class="label-ctrl">Código postal</label>
                    <input id="codigo" name="codigo" type="number" value="{{empleado.codigo}}">
                </div>
                <div class="ctrl">
                    <label for="telefono" class="label-ctrl">telefono</label>
                    <input id="telefono" name="telefono" type="tel" class="campo-obligatorio" campo value="{{empleado.telefono}}">
                </div>
                <div class="ctrl">
                    <label for="email-sig" class="label-ctrl">Correo</label>
                    <input id="email-sig" name="email" type="text" value="{{empleado.email}}">
                    <span class="{{error2_msg}}" style="color: red; display: none;">El correo ya esta en uso</span>
                </div>
                <div class="ctrl">
                    <label for="salario" class="label-ctrl">Salario semanal</label>
                    <input id="salario" name="salario" type="number" class="campo-obligatorio" campo value="{{empleado.salario}}">
                </div>
                <div class="ctrl">
                    <label for="fecha_ing" class="label-ctrl">Fecha de ingreso</label>
                    <input id="fecha_ing" name="fecha_ing" type="date" class="campo-obligatorio" campo value="{{empleado.fecha_ing}}">
                </div>
            </div>
        </div>
        <div class="btn-form sing">
            <button id="registrarLimpieza" class="btn-span" type="button">Enviar</button>
        </div>
    </form>
</div>
<script src = "https://ajax.googleapis.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>

<script>
    let btn = document.getElementById('registrarLimpieza');
    let email = document.getElementById('email-sig');
    var validad = true;
    var validad2 = true;
    email.addEventListener('blur', ()=>{
        let emailRegu = new RegExp("^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$");
        if(emailRegu.test(email.value)){
            email.style = 'box-shadow: 0px 0px 6px rgb(5 231 85)';
            validad = true;
        }else{
            email.style = 'box-shadow: 0px 0px 6px rgb(231 5 5)';
            validad = false;
        }
    });
    btn.addEventListener('click', ()=>{
        if(validate() && validad && validad2){
            btn.type = 'submit';
        }else{
            console.log(btn.type);
            console.log(false);
        }
    });
    function validate() {
        let errors = 0;
        let $requireds = 0;
        const $inputs = document.querySelectorAll('.section [campo]');
        $inputs.forEach($input => {

            let $value = $input.value.trim();
            if ($value == '' && $input.classList.contains('campo-obligatorio')) {
                errors++;
                $input.classList.add('invalid');
            } else {
                $input.classList.add('valid');
            }

            if ($input.classList.contains('campo-obligatorio')) {
                $requireds++;
            }

        });

        const $inputsForValidate = document.querySelectorAll('.campo-obligatorio.valid');

        if (errors > 0) {
            return false;
        }

        if ($requireds == $inputsForValidate.length) {
            // $log('todo valido');
            return true;
        } else if ($requireds == 0 && $inputsForValidate.length == 0) {
            // $log('No hay inputs obligatorios');
            return true
        } else {
            // $log('hay inputs erroneos');
            window.scrollTo(0, 0);
            return false;
        }
    }
     
</script>